<!-- Validation failure messages -->

<% if @application.errors.any? %>
  <% @application.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Application </h3>
      </div>
      <div class="panel-body">
        <form action="/update_application/<%= @application.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for unit_id -->
          <div class="form-group">
            <label for="unit_id" class="col-sm-2 control-label">
              Unit
            </label>
            <div class="col-sm-10">
              <input type="text" id="unit_id" name="unit_id" placeholder="Unit" class="form-control" value="<%= @application.unit.building_address %>">
            </div>
          </div>

          <!-- Label and input for tenant_id -->
          <div class="form-group">
            <label for="tenant_id" class="col-sm-2 control-label">
              Tenant
            </label>
            <div class="col-sm-10">
              <input type="text" id="tenant_id" name="tenant_id" placeholder="<%= current_tenant.email %>" class="form-control" value="<%= @application.tenant.email %>">
            </div>
          </div>



          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Application
              </button>
              or
              <a href="/applications/<%= @application.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
